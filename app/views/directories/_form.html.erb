<div class="container">
	<div class="row">
		<div class="col s12 m6 l4 offset-m3 offset-l4">
			<div class="card">
				<%= form_for directory, method: :post, remote: true do |f| %>
					<div class="card-content">
						<%= f.text_field :directory_id, type: :hidden %>
						<div class="row">
							<div class="input-field col s12 m12 l12">
								<%= f.text_field :name, required: true, maxlength: 64 %>
								<%= f.label :name, "Nome" %>
							</div>
						</div>
					</div>
					<div class="card-action">
						<div class="action">
							<button type="submit" class="btn green">Salvar</button>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>